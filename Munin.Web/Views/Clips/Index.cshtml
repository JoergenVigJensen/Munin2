@model IEnumerable<Munin.DAL.Models.Clip>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div ng-controller="clipsListCtrl" ng-init="loadPage()">
    <div class="row">
        <div class="col-md-1">
            <select class="form-control input-small pull-right" ng-model="query.size" ng-change="perPage()" ng-options="(size) for size in pageSizes"></select>
        </div>
        <div class="col-md-8"></div>
        <div class="col-md-3 text-right">
            <div class="input-group input-group-small pull-right">
                <input type="text" class="form-control search-query" ng-model="query.q" placeholder="Søg" ng-keyup="$event.keyCode == 13 ? search() : null">
                <div class="input-group-btn">
                    <button class="btn btn-default" ng-click="search()"><i class="glyphicon glyphicon-search"></i></button>
                </div>
            </div>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th class="index" order="index"><a href ng-click="sort_by('attache')" style="color: #555555;cursor:hand;">Mapper&nbsp;<i ng-class="selectedCls('attache')"></i></a></th>
                        <th class="title" order="title"><a href ng-click="sort_by('title')" style="color: #555555;cursor:hand;">Titel&nbsp;<i ng-class="selectedCls('title')"></i></a></th>
                        <th class="date" order="date"><a href ng-click="sort_by('dateTime')" style="color: #555555;cursor:hand;">Datering&nbsp;<i ng-class="selectedCls('dateTime')"></i></a></th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <td colspan="1">
                            <div class="row">
                                <br />
                                <div class="col-md-12">
                                    <h4>{{pageResult.count}} rækker fundet</h4>
                                </div>
                            </div>
                        </td>
                        <td colspan="4">
                            <div class="pull-right">
                                <ul class="pagination">
                                    <li ng-class="{disabled: query.p == 0}">
                                        <a href ng-click="prevPage()">« Forrige</a>
                                    </li>
                                    <li ng-repeat="n in pages"
                                        ng-class="{active: n == query.p}"
                                        ng-click="setPage()">
                                        <a href ng-bind="n+1">1</a>
                                    </li>
                                    <li ng-class="{disabled: query.p == pages.length-1}">
                                        <a href ng-click="nextPage()">Næste »</a>
                                    </li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                </tfoot>
                <tbody>
                    <tr ng-repeat="item in items">
                        <td class="col-md-2">{{item.index}}</td>
                        <td class="col-md-6">{{item.title}}</td>
                        <td class="col-md-2">{{item.date}}</td>
                        <td class="col-md-1"><a href="/Clips/Edit/{{item.id}}"><span title="Rediger" class="btn btn-sm" style="background-color: #5fba7d;color:white"><span class="glyphicon glyphicon-pencil"></span></span></a></td>
                        <td class="col-md-1"><span title="Slet" class="btn btn-danger btn-sm"><span class="glyphicon glyphicon-trash"></span></span></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>